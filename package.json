{
  "name": "astro-v5-template",
  "type": "module",
  "version": "0.1.1",
  "homepage": "https://astrov5.casoon.dev/",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format:svelte": "prettier --write \"**/*.svelte\" --config .prettierrc.svelte.json",
    "format:astro": "prettier --write \"**/*.astro\" --config .prettierrc.astro.json",
    "check:format:svelte": "prettier --check \"**/*.svelte\" --config .prettierrc.svelte.json",
    "check:format:astro": "prettier --check \"**/*.astro\" --config .prettierrc.astro.json",
    "check:biome": "biome check --write .",
    "check": "npm run check:biome && npm run check:format:svelte && npm run check:format:astro",
    "type-check": "astro check",
    "update-deps": "npx npm-check-updates -u",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/rss": "^4.0.0",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/svelte": "^7.2.0",
    "@casoon/atlas-styles": "^0.0.4",
    "@fontsource/inter": "^5.2.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.13",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.544.0",
    "svelte": "^5.39.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node-fetch": "^2.6.13",
    "astro": "^5.14.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "wait-on": "^9.0.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.astro": [
      "prettier --write --config .prettierrc.astro.json"
    ],
    "*.svelte": [
      "prettier --write --config .prettierrc.svelte.json"
    ]
  }
}
