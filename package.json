{
  "name": "astro-v5-workspace",
  "version": "1.4.0",
  "private": true,
  "description": "Astro v5 monorepo with blank, base, and demo templates using pnpm workspaces",
  "author": "casoon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/astro-v5-template"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "24.11.0",
    "pnpm": "9.15.4"
  },
  "scripts": {
    "dev": "pnpm --filter @astro-v5/demo dev",
    "dev:blank": "pnpm --filter @astro-v5/blank dev",
    "dev:base": "pnpm --filter @astro-v5/base dev",
    "dev:demo": "pnpm --filter @astro-v5/demo dev",
    "build": "pnpm -r build",
    "build:blank": "pnpm --filter @astro-v5/blank build",
    "build:base": "pnpm --filter @astro-v5/base build",
    "build:demo": "pnpm --filter @astro-v5/demo build",
    "preview": "pnpm --filter @astro-v5/demo preview",
    "preview:blank": "pnpm --filter @astro-v5/blank preview",
    "preview:base": "pnpm --filter @astro-v5/base preview",
    "preview:demo": "pnpm --filter @astro-v5/demo preview",
    "optimize-images": "node scripts/optimize-images.mjs",
    "optimize-images:blank": "node scripts/optimize-images.mjs blank",
    "optimize-images:base": "node scripts/optimize-images.mjs base",
    "optimize-images:demo": "node scripts/optimize-images.mjs demo",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:images": "rm -rf packages/*/public/responsive",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "type-check": "pnpm -r type-check",
    "update-deps": "pnpm -r update-deps"
  },
  "keywords": [
    "astro",
    "template",
    "starter",
    "monorepo",
    "workspace",
    "pnpm",
    "volta"
  ],
  "devDependencies": {
    "sharp": "^0.34.5"
  }
}
