{
  "name": "astro-v5-workspace",
  "version": "1.1.0",
  "private": true,
  "description": "Astro v5 monorepo with base templatedemo site, pnpm and Volta",
  "author": "casoon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/astro-v5-template"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "22.21.0",
    "pnpm": "9.15.4"
  },
  "scripts": {
    "dev": "pnpm --filter @astro-v5/demo dev",
    "dev:base": "pnpm --filter @astro-v5/base dev",
    "build": "pnpm -r build",
    "build:base": "pnpm --filter @astro-v5/base build",
    "build:demo": "pnpm --filter @astro-v5/demo build",
    "preview": "pnpm --filter @astro-v5/demo preview",
    "preview:base": "pnpm --filter @astro-v5/base preview",
    "optimize-images": "node scripts/optimize-images.mjs",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:images": "rm -rf packages/*/public/images-optimized",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "type-check": "pnpm -r type-check",
    "update-deps": "pnpm -r update-deps"
  },
  "keywords": [
    "astro",
    "template",
    "starter",
    "monorepo",
    "workspace",
    "pnpm",
    "volta"
  ],
  "devDependencies": {
    "sharp": "^0.34.5"
  }
}
