{
  "name": "astro-v5-workspace",
  "version": "1.5.0",
  "private": true,
  "description": "Astro v5 monorepo with pnpm workspaces, shared design system, and centralized dependency management",
  "author": "casoon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/astro-v5-template"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "24.11.0",
    "pnpm": "9.15.4"
  },
  "scripts": {
    "dev": "pnpm --filter @astro-v5/demo dev",
    "dev:blank": "pnpm --filter @astro-v5/blank dev",
    "dev:base": "pnpm --filter @astro-v5/base dev",
    "dev:demo": "pnpm --filter @astro-v5/demo dev",
    "build": "pnpm -r build",
    "build:blank": "pnpm --filter @astro-v5/blank build",
    "build:base": "pnpm --filter @astro-v5/base build",
    "build:demo": "pnpm --filter @astro-v5/demo build",
    "preview": "pnpm --filter @astro-v5/demo preview",
    "preview:blank": "pnpm --filter @astro-v5/blank preview",
    "preview:base": "pnpm --filter @astro-v5/base preview",
    "preview:demo": "pnpm --filter @astro-v5/demo preview",
    "optimize-images": "node scripts/optimize-images.mjs",
    "optimize-images:blank": "node scripts/optimize-images.mjs blank",
    "optimize-images:base": "node scripts/optimize-images.mjs base",
    "optimize-images:demo": "node scripts/optimize-images.mjs demo",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:images": "rm -rf apps/*/public/responsive",
    "check": "pnpm biome:check",
    "type-check": "pnpm -r type-check",
    "update-deps": "pnpm -r update-deps",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "lint:astro": "eslint \"**/*.astro\"",
    "lint:astro:fix": "eslint \"**/*.astro\" --fix",
    "format": "pnpm biome:format && pnpm format:astro && pnpm format:svelte",
    "format:astro": "prettier --write \"**/*.astro\"",
    "format:svelte": "prettier --write \"**/*.svelte\"",
    "format:check": "biome format . && prettier --check \"**/*.astro\" \"**/*.svelte\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.astro": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "prettier --write"
    ],
    "*.{css,scss,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "astro",
    "template",
    "starter",
    "monorepo",
    "workspace",
    "pnpm",
    "catalog"
  ],
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-astro": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "sharp": "catalog:"
  }
}
