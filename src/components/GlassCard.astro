---
export interface Props {
  title: string;
  description?: string;
  variant?: 'default' | 'dark' | 'strong';
  size?: 'sm' | 'md' | 'lg';
}

const {
  title,
  description,
  variant = 'default',
  size = 'md'
} = Astro.props;

const sizeClass = size === 'sm' ? 'p-4' 
  : size === 'lg' ? 'p-8' 
  : 'p-6';

// Use Atlas glass utilities based on variant
const glassClass = variant === 'default' ? 'cs-glass' 
  : variant === 'dark' ? 'cs-glass-black' 
  : 'cs-glass-3xl';
---

<div class={`${glassClass} ${sizeClass} transform transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl`}>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  {description && (
    <p class="text-slate-700 dark:text-slate-200">{description}</p>
  )}
  <slot />
</div>
