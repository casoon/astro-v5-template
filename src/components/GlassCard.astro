---
export interface Props {
  title: string;
  description?: string;
  variant?: 'default' | 'dark' | 'strong';
  size?: 'sm' | 'md' | 'lg';
}

const {
  title,
  description,
  variant = 'default',
  size = 'md'
} = Astro.props;

const glassClass = variant === 'default' ? 'cs-glass' 
  : variant === 'dark' ? 'cs-glass-dark' 
  : 'cs-glass-strong';

const sizeClass = size === 'sm' ? 'cs-glass-sm p-4' 
  : size === 'lg' ? 'cs-glass-lg p-8' 
  : 'cs-glass-md p-6';
---

<div class={`${glassClass} ${sizeClass} rounded-lg transition-all duration-300 hover:scale-105`}>
  <h3 class="cs-text text-xl font-semibold mb-2">{title}</h3>
  {description && (
    <p class="cs-text-muted">{description}</p>
  )}
  <slot />
</div>