---
export interface Props {
  title: string;
  description?: string;
  variant?: 'default' | 'dark' | 'strong';
  size?: 'sm' | 'md' | 'lg';
}

const {
  title,
  description,
  variant = 'default',
  size = 'md'
} = Astro.props;

const sizeClass = size === 'sm' ? 'p-4' 
  : size === 'lg' ? 'p-8' 
  : 'p-6';

// Native Tailwind glass effects with different intensities and colors
const glassClass = variant === 'default' ? 'bg-gradient-to-br from-cyan-400/25 to-blue-400/25 backdrop-blur-md border border-cyan-300/40' 
  : variant === 'dark' ? 'bg-gradient-to-br from-slate-700/60 to-slate-900/60 backdrop-blur-lg border border-slate-500/40 text-white' 
  : 'bg-gradient-to-br from-purple-400/30 to-pink-400/30 backdrop-blur-xl border-2 border-purple-300/50';
---

<div class={`${glassClass} ${sizeClass} rounded-xl transform transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:bg-white/25`}>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  {description && (
    <p class={variant === 'dark' ? 'text-gray-200' : 'text-slate-700 dark:text-slate-200'}>{description}</p>
  )}
  <slot />
</div>
