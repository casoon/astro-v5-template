---
import SvelteDemo from '@/components/SvelteDemo.svelte';
import BaseLayout from '@/layouts/BaseLayout.astro';
import GlassCard from '@/components/GlassCard.astro';
---
<BaseLayout>
  <div class="space-y-8">
    <!-- Glowing Title -->
    <h1 class="text-6xl font-bold text-center">
      <span class="bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 bg-clip-text text-transparent animate-pulse">
        Astro V5
      </span>
      <span class="text-slate-800 dark:text-slate-200"> + </span>
      <span class="bg-gradient-to-r from-cyan-400 to-cyan-500 bg-clip-text text-transparent">
        Tailwind
      </span>
      <span class="text-slate-800 dark:text-slate-200"> + </span>
      <span class="bg-gradient-to-r from-pink-400 to-pink-600 bg-clip-text text-transparent">
        Svelte
      </span>
    </h1>
    
    <!-- Glowing Description -->
    <p class="text-xl text-slate-600 dark:text-slate-300 text-center leading-relaxed max-w-2xl mx-auto">
      Modern template with 
      <span class="cs-gradient-text-ocean font-semibold">Atlas Design System</span>
    </p>
    
    <!-- Atlas Glass Cards -->
    <div class="relative mt-12 p-8 rounded-3xl bg-gradient-to-br from-purple-500 via-pink-500 to-cyan-500">
      <div class="grid md:grid-cols-3 gap-6">
        <GlassCard title="Glass Effect" description="Beautiful Atlas glassmorphism" />
        <GlassCard title="Dark Glass" description="Dark variant for enhanced contrast" variant="dark" />
        <GlassCard title="Strong Glass" description="Maximum glass effect intensity" variant="strong" />
      </div>
    </div>
    
    <!-- Atlas Gradient Examples -->
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="cs-gradient-ocean p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white drop-shadow-lg">Ocean Gradient</h3>
        <p class="text-white/90 mt-2">Atlas gradient with animation support</p>
      </div>
      <div class="cs-gradient-sunset p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white drop-shadow-lg">Sunset Gradient</h3>
        <p class="text-white/90 mt-2">Warm Atlas gradient for vibrant designs</p>
      </div>
    </div>
    
    <!-- Atlas Button Examples -->
    <div class="flex flex-wrap justify-center gap-4 mt-8">
      <button class="cs-glass-purple px-6 py-3 text-white font-semibold hover:scale-105 transition-transform">
        Primary Button
      </button>
      <button class="cs-glass-black px-6 py-3 text-white font-semibold hover:scale-105 transition-transform">
        Secondary
      </button>
      <button class="cs-glass px-6 py-3 font-semibold hover:scale-105 transition-transform">
        Glass Button
      </button>
    </div>
    
    <!-- Atlas Feature Cards -->
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="cs-glass p-6 hover:scale-[1.02] transition-transform">
        <div class="text-4xl mb-4">ðŸš€</div>
        <h3 class="text-xl font-bold mb-2">Fast Performance</h3>
        <p>Optimized Atlas components</p>
      </div>
      <div class="cs-glass-blue p-6 hover:scale-[1.02] transition-transform">
        <div class="text-4xl mb-4">ðŸŽ¨</div>
        <h3 class="text-xl font-bold mb-2">Modern Design</h3>
        <p>Beautiful glass effects</p>
      </div>
    </div>
    
    <!-- Svelte Component with Glow -->
    <div class="flex justify-center mt-12">
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-pink-600 rounded-2xl blur-xl opacity-30 animate-pulse"></div>
        <div class="relative">
          <SvelteDemo client:load />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
