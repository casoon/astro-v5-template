---
import SvelteDemo from '@/components/SvelteDemo.svelte';
import BaseLayout from '@/layouts/BaseLayout.astro';
import GlassCard from '@/components/GlassCard.astro';
---
<BaseLayout>
  <div class="space-y-8">
    <!-- Glowing Title -->
    <h1 class="text-6xl font-bold text-center">
      <span class="bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 bg-clip-text text-transparent animate-pulse">
        Astro V5
      </span>
      <span class="text-gray-800 dark:text-gray-200"> + </span>
      <span class="bg-gradient-to-r from-cyan-400 to-cyan-500 bg-clip-text text-transparent">
        Tailwind
      </span>
      <span class="text-gray-800 dark:text-gray-200"> + </span>
      <span class="bg-gradient-to-r from-pink-400 to-pink-600 bg-clip-text text-transparent">
        Svelte
      </span>
    </h1>
    
    <!-- Glowing Description -->
    <p class="text-xl text-gray-600 dark:text-gray-300 text-center leading-relaxed max-w-2xl mx-auto">
      Modern template with 
      <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent font-semibold">Tailwind CSS v4</span>
    </p>
    
    <!-- Glass Effect Examples with Standard Tailwind -->
    <div class="grid md:grid-cols-3 gap-6 mt-12">
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg p-6 hover:scale-105 transition-transform">
        <h3 class="text-xl font-semibold mb-2">Glass Effect</h3>
        <p class="text-gray-300">Beautiful glassmorphism with backdrop blur</p>
      </div>
      <div class="bg-black/20 backdrop-blur-lg border border-white/10 rounded-lg p-6 hover:scale-105 transition-transform">
        <h3 class="text-xl font-semibold mb-2">Dark Glass</h3>
        <p class="text-gray-300">Dark variant for enhanced contrast</p>
      </div>
      <div class="bg-white/30 backdrop-blur-xl border border-white/30 rounded-lg p-6 hover:scale-105 transition-transform">
        <h3 class="text-xl font-semibold mb-2">Strong Glass</h3>
        <p class="text-gray-300">Maximum glass effect intensity</p>
      </div>
    </div>
    
    <!-- Gradient Examples -->
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="bg-gradient-to-br from-cyan-500 to-blue-600 p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white">Ocean Gradient</h3>
        <p class="text-white/90 mt-2">Dynamic gradient with modern design</p>
      </div>
      <div class="bg-gradient-to-br from-orange-400 to-pink-600 p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white">Sunset Gradient</h3>
        <p class="text-white/90 mt-2">Warm gradient for vibrant designs</p>
      </div>
    </div>
    
    <!-- Button Examples -->
    <div class="flex justify-center gap-4 mt-8">
      <button class="px-6 py-3 bg-cyan-600 hover:bg-cyan-700 text-white rounded-lg font-semibold transition-colors">Primary Button</button>
      <button class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-lg font-semibold transition-colors">Secondary</button>
      <button class="px-6 py-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm border border-white/30 text-white rounded-lg font-semibold transition-all">Glass Button</button>
    </div>
    
    <!-- Svelte Component with Glow -->
    <div class="flex justify-center mt-12">
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-pink-600 rounded-2xl blur-xl opacity-30 animate-pulse"></div>
        <div class="relative">
          <SvelteDemo client:load />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
