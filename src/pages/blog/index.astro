---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

// Alle Blog-Posts abrufen
const posts = await getCollection('blog');
// Nach Datum sortieren (neueste zuerst)
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout>
  <div class="space-y-8 w-full">
    <!-- Header -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-800 dark:text-white">
        Blog
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Entdecke Artikel √ºber Astro, Tailwind CSS, Svelte und moderne Web-Entwicklung
      </p>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {posts.map((post) => (
        <article class="group bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
          <!-- Image or Placeholder -->
          <div class="aspect-video overflow-hidden bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
            {post.data.image ? (
              <img 
                src={post.data.image} 
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            ) : (
              <svg 
                class="w-16 h-16 text-gray-400 dark:text-gray-500" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="1.5" 
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                />
              </svg>
            )}
          </div>
          
          <!-- Content -->
          <div class="p-6 space-y-4">
            <!-- Meta -->
            <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
              <time datetime={post.data.date}>
                {new Date(post.data.date).toLocaleDateString('de-DE', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.author && (
                <span>von {post.data.author}</span>
              )}
            </div>
            
            <!-- Title -->
            <h2 class="text-xl font-bold text-gray-800 dark:text-white group-hover:text-cyan-600 dark:group-hover:text-cyan-400 transition-colors">
              <a href={`/blog/${post.slug}/`}>
                {post.data.title}
              </a>
            </h2>
            
            <!-- Description -->
            {post.data.description && (
              <p class="text-gray-600 dark:text-gray-300 line-clamp-3">
                {post.data.description}
              </p>
            )}
            
            <!-- Tags -->
            {post.data.tags && (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span class="px-3 py-1 text-xs bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Read More -->
            <a 
              href={`/blog/${post.slug}/`}
              class="inline-flex items-center text-cyan-600 dark:text-cyan-400 font-semibold hover:text-cyan-700 dark:hover:text-cyan-300 transition-colors"
            >
              Weiterlesen
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- Empty State -->
    {posts.length === 0 && (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">
          Noch keine Blog-Posts
        </h3>
        <p class="text-gray-600 dark:text-gray-300">
          Erstelle deinen ersten Blog-Post im <code class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">src/content/blog/</code> Verzeichnis
        </p>
      </div>
    )}
  </div>
</BaseLayout> 