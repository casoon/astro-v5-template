---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getSortedPosts } from '@/utils/blog';
import type { CollectionEntry } from 'astro:content';

const posts = await getSortedPosts();
---
---

<BaseLayout>
  <div class="space-y-8 w-full">
    <!-- Header -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-800 dark:text-white">
        Blog
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-200 max-w-2xl mx-auto">
        Discover articles about Astro, Tailwind CSS, Svelte and modern web development
      </p>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {posts.map((post: CollectionEntry<'blog'>) => (
        <article class="group bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
          <!-- Image or Placeholder -->
          <div class="aspect-video overflow-hidden bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
            {post.data.image ? (
              <img 
                src={post.data.image} 
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            ) : (
              <svg 
                class="w-16 h-16 text-gray-400 dark:text-gray-500" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="1.5" 
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                />
              </svg>
            )}
          </div>
          
          <!-- Content -->
          <div class="p-6 space-y-4">
            <!-- Meta -->
            <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-300">
            <time datetime={post.data.date}>
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {post.data.author && (
              <span>by {post.data.author}</span>
            )}
          </div>
            
            <!-- Title -->
            <h2 class="text-xl font-bold text-gray-800 dark:text-white group-hover:text-cyan-600 dark:group-hover:text-cyan-400 transition-colors">
              <a href={`/blog/${post.slug}/`}>
                {post.data.title}
              </a>
            </h2>
            
            <!-- Description -->
            {post.data.description && (
              <p class="text-gray-600 dark:text-gray-200 line-clamp-3">
                {post.data.description}
              </p>
            )}
            
            <!-- Tags -->
            {post.data.tags && (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="px-3 py-1 text-xs bg-cyan-100 dark:!bg-gray-800 text-cyan-700 dark:!text-white rounded-full font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Read More -->
            <a 
              href={`/blog/${post.slug}/`}
              class="inline-flex items-center text-cyan-600 dark:text-cyan-400 font-semibold hover:text-cyan-700 dark:hover:text-cyan-300 transition-colors"
            >
              Read more
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- Empty State -->
    {posts.length === 0 && (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">
          No blog posts yet
        </h3>
        <p class="text-gray-600 dark:text-gray-300">
          Create your first blog post in the <code class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">src/content/blog/</code> directory
        </p>
      </div>
    )}
  </div>
</BaseLayout> 