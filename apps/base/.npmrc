# pnpm configuration
# https://pnpm.io/npmrc

# Use pnpm workspaces (even for single-package repos)
shamefully-hoist=false

# Auto-install peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Save exact versions by default
save-exact=false

# Lockfile version is managed by pnpm automatically
# lockfile-version=9

# Store directory (uses default ~/.pnpm-store)
# store-dir=~/.pnpm-store

# Enable git checks
git-checks=true

# Node linker (hoisted is faster, isolated is safer)
node-linker=hoisted
