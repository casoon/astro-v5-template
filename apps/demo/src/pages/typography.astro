  /* Playfair Display - Elegant Serif */
  @import '@fontsource/playfair-display/700.css';

  /* Source Serif 4 - Readable Serif */
  @import '@fontsource/source-serif-4/400.css';

  /* Montserrat - Modern Sans */
  @import '@fontsource/montserrat/700.css';

  /* Merriweather - Traditional Serif */
  @import '@fontsource/merriweather/400.css';

  /* Space Grotesk - Tech Sans */
  @import '@fontsource/space-grotesk/700.css';

  /* Work Sans - Interface Sans */
  @import '@fontsource/work-sans/400.css';

  /* Crimson Text - Book Serif */
  @import '@fontsource/crimson-text/600.css';

  /* Lora - Warm Serif */
  @import '@fontsource/lora/400.css';

  /* Poppins - Friendly Sans */
  @import '@fontsource/poppins/600.css';

  /* DM Sans - UI Sans */
  @import '@fontsource/dm-sans/400.css';

  /* Archivo - Professional Sans */
  @import '@fontsource/archivo/700.css';

  /* Manrope - Geometric Sans */
  @import '@fontsource/manrope/400.css';

  /* Raleway - Elegant Sans */
  @import '@fontsource/raleway/300.css';

  /* JetBrains Mono - Developer Monospace */
  @import '@fontsource/jetbrains-mono/400.css';

  /* Fira Code - Code Monospace */
  @import '@fontsource/fira-code/400.css';
</style>
