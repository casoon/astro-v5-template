---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Font pairings configuration
const fontPairings = [
  {
    id: 1,
    headingFont: 'Playfair Display',
    textFont: 'Source Serif 4',
    category: 'Elegant Serif Duo',
    headingUse: 'Headlines, Titles',
    textUse: 'Body Text, Articles',
    headingReason: 'Classic elegance with high contrast, perfect for luxury brands and editorial content',
    textReason: 'Highly readable serif designed for long-form text, excellent screen rendering',
    bestFor: 'Magazines, Fashion, Luxury Brands',
    headingImport: '@fontsource/playfair-display',
    textImport: '@fontsource/source-serif-4',
    headingWeight: '700',
    textWeight: '400',
    headingFallback: 'serif',
    textFallback: 'serif',
  },
  {
    id: 2,
    headingFont: 'Montserrat',
    textFont: 'Merriweather',
    category: 'Modern Sans + Traditional Serif',
    headingUse: 'Headlines, Navigation',
    textUse: 'Body Text, Long Articles',
    headingReason: 'Geometric sans-serif inspired by urban Buenos Aires, strong and modern',
    textReason: 'Designed for comfortable reading on screens, warm and friendly',
    bestFor: 'Blogs, Corporate Sites, News',
    headingImport: '@fontsource/montserrat',
    textImport: '@fontsource/merriweather',
    headingWeight: '700',
