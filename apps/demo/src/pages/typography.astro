    headingReason: 'Modified version of Space Mono, quirky yet professional with tech vibes',
    textReason: 'Optimized for screen use, slightly condensed for efficient layouts',
    bestFor: 'Tech Startups, SaaS, Apps',
    headingImport: '@fontsource/space-grotesk',
    textImport: '@fontsource/work-sans',
    headingWeight: '700',
    textWeight: '400',
    headingFallback: 'sans-serif',
    textFallback: 'sans-serif',
  },
  {
    id: 4,
    headingFont: 'Crimson Text',
    textFont: 'Lora',
    category: 'Book-Style Serif Duo',
    headingUse: 'Titles, Chapter Headings',
    textUse: 'Long-Form Content',
    headingReason: 'Inspired by classic Garamond, perfect for traditional book-like layouts',
    textReason: 'Brushed curves give warmth while maintaining readability',
    bestFor: 'Publishing, Academic, Literary',
    headingImport: '@fontsource/crimson-text',
    textImport: '@fontsource/lora',
    headingWeight: '600',
    textWeight: '400',
    headingFallback: 'serif',
    textFallback: 'serif',
  },
  {
    id: 5,
    headingFont: 'Poppins',
    textFont: 'DM Sans',
    category: 'Friendly Modern Sans',
    headingUse: 'Headlines, CTAs',
    textUse: 'Body Text, UI',
    headingReason: 'Geometric sans with rounded friendly appearance, highly versatile',
    textReason: 'Low contrast for comfortable reading, excellent at small sizes',
    bestFor: 'Landing Pages, E-commerce, Apps',
    headingImport: '@fontsource/poppins',
    textImport: '@fontsource/dm-sans',
    headingWeight: '600',
    textWeight: '400',
    headingFallback: 'sans-serif',
    textFallback: 'sans-serif',
  },
  {
    id: 6,
    headingFont: 'Archivo',
    textFont: 'Manrope',
    category: 'Clean Professional Sans',
    headingUse: 'Headers, Navigation',
    textUse: 'Interface Text, Content',
    headingReason: 'Grotesque sans-serif designed for highlights and headlines, strong presence',
    textReason: 'Modern geometric with excellent legibility, slightly rounded terminals',
    bestFor: 'Professional Services, Finance, B2B',
    headingImport: '@fontsource/archivo',
    textImport: '@fontsource/manrope',
    headingWeight: '700',
    textWeight: '400',
    headingFallback: 'sans-serif',
    textFallback: 'sans-serif',
  },
  {
    id: 7,
    headingFont: 'Raleway',
    textFont: 'JetBrains Mono',
    category: 'Creative + Monospace',
    headingUse: 'Display Headlines',
    textUse: 'Code Blocks, Data',
    headingReason: 'Elegant thin weights for sophisticated designs, wide character spacing',
    textReason: 'Developer-focused monospace with excellent code readability',
    bestFor: 'Developer Tools, Tech Docs, Portfolios',
    headingImport: '@fontsource/raleway',
    textImport: '@fontsource/jetbrains-mono',
    headingWeight: '300',
    textWeight: '400',
    headingFallback: 'sans-serif',
    textFallback: 'monospace',
  },
];
---

<BaseLayout
  title="Typography Guide"
  description="Professional font pairing recommendations with live examples"
  keywords={['typography', 'fonts', 'font pairing', 'web design']}
>
  <div class="w-full space-y-12">
    <!-- Header -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl sm:text-5xl font-bold bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
        Typography & Font Pairing Guide
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
        Professional font combinations with detailed recommendations and live examples. All fonts are available via @fontsource for easy self-hosting.
      </p>
    </div>

    <!-- Font Pairing Table -->
    <section class="space-y-6">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-slate-100">Font Pairing Recommendations</h2>

      <div class="overflow-x-auto -mx-4 sm:mx-0">
        <div class="inline-block min-w-full align-middle">
          <div class="overflow-hidden border border-slate-200 dark:border-slate-700 rounded-xl">
            <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
              <thead class="bg-slate-50 dark:bg-slate-800">
                <tr>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Category
                  </th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Heading Font
                  </th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Text Font
                  </th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Best For
                  </th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Heading Use
                  </th>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wider">
                    Text Use
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white dark:bg-slate-900 divide-y divide-slate-200 dark:divide-slate-700">
                {fontPairings.map((pairing) => (
                  <tr class="hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                    <td class="px-4 py-4 text-sm font-medium text-slate-900 dark:text-slate-100">
                      {pairing.category}
                    </td>
                    <td class="px-4 py-4 text-sm text-slate-700 dark:text-slate-300">
                      <span class="font-semibold">{pairing.headingFont}</span>
                      <br />
                      <span class="text-xs text-slate-500 dark:text-slate-400">{pairing.headingReason}</span>
                    </td>
                    <td class="px-4 py-4 text-sm text-slate-700 dark:text-slate-300">
                      <span class="font-semibold">{pairing.textFont}</span>
                      <br />
                      <span class="text-xs text-slate-500 dark:text-slate-400">{pairing.textReason}</span>
                    </td>
                    <td class="px-4 py-4 text-sm text-slate-700 dark:text-slate-300">
                      {pairing.bestFor}
                    </td>
                    <td class="px-4 py-4 text-xs text-slate-600 dark:text-slate-400">
                      {pairing.headingUse}
                    </td>
                    <td class="px-4 py-4 text-xs text-slate-600 dark:text-slate-400">
                      {pairing.textUse}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <!-- Live Font Examples -->
    <section class="space-y-8">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-slate-100">Live Font Pairing Examples</h2>

      {fontPairings.map((pairing) => (
        <div class="border border-slate-200 dark:border-slate-700 rounded-2xl p-8 bg-white dark:bg-slate-800 shadow-lg cs-fade-in">
          <!-- Pairing Header -->
          <div class="flex items-center justify-between mb-6 pb-4 border-b border-slate-200 dark:border-slate-700">
            <div>
              <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100">{pairing.category}</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">
                {pairing.headingFont} + {pairing.textFont}
              </p>
            </div>
            <div class="flex gap-2">
              <span class="px-3 py-1 text-xs font-semibold rounded-full bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200">
                {pairing.bestFor}
              </span>
            </div>
          </div>

          <!-- Font Preview -->
          <div class="space-y-6">
            <!-- Heading Font Example -->
            <div class="space-y-3">
              <div class="flex items-center gap-2">
                <span class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Heading:</span>
                <code class="text-xs bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">{pairing.headingFont} {pairing.headingWeight}</code>
              </div>
              <h2
                class="text-4xl text-slate-900 dark:text-slate-100 leading-tight"
                style={`font-family: '${pairing.headingFont}', ${pairing.headingFallback}; font-weight: ${pairing.headingWeight};`}
              >
                The Quick Brown Fox Jumps Over the Lazy Dog
              </h2>
              <p class="text-sm text-slate-600 dark:text-slate-400 italic">
                {pairing.headingReason}
              </p>
            </div>

            <!-- Text Font Example -->
            <div class="space-y-3">
              <div class="flex items-center gap-2">
                <span class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase">Body Text:</span>
                <code class="text-xs bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">{pairing.textFont} {pairing.textWeight}</code>
              </div>
              <p
                class="text-base text-slate-700 dark:text-slate-300 leading-relaxed"
                style={`font-family: '${pairing.textFont}', ${pairing.textFallback}; font-weight: ${pairing.textWeight}; line-height: 1.65;`}
              >
                Typography is the art and technique of arranging type to make written language legible, readable and appealing. The arrangement of type involves selecting typefaces, point sizes, line lengths, line-spacing, and letter-spacing, and adjusting the space between pairs of letters. The term typography is also applied to the style, arrangement, and appearance of the letters, numbers, and symbols created by the process.
              </p>
              <p class="text-sm text-slate-600 dark:text-slate-400 italic">
                {pairing.textReason}
              </p>
            </div>

            <!-- Combined Example -->
            <div class="mt-6 p-6 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 rounded-xl">
              <h3
                class="text-2xl text-slate-900 dark:text-slate-100 mb-3"
                style={`font-family: '${pairing.headingFont}', ${pairing.headingFallback}; font-weight: ${pairing.headingWeight};`}
              >
                Full Pairing Example
              </h3>
              <p
                class="text-base text-slate-700 dark:text-slate-300"
                style={`font-family: '${pairing.textFont}', ${pairing.textFallback}; font-weight: ${pairing.textWeight}; line-height: 1.65;`}
              >
                This is how the heading and body text work together in a real layout. Notice the contrast and harmony between the two typefaces. Good typography creates hierarchy, improves readability, and enhances the overall user experience.
              </p>
            </div>

            <!-- Installation Code -->
            <details class="mt-4">
              <summary class="cursor-pointer text-sm font-semibold text-slate-700 dark:text-slate-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                Show installation code
              </summary>
              <div class="mt-3 p-4 bg-slate-900 rounded-lg overflow-x-auto">
                <pre class="text-sm text-slate-100"><code>{`// Install via npm/pnpm
pnpm add ${pairing.headingImport} ${pairing.textImport}

// Import in your CSS/Astro file
import '${pairing.headingImport}/400.css';
import '${pairing.headingImport}/700.css';
import '${pairing.textImport}/400.css';

// Apply in Tailwind config or CSS
h1, h2, h3 {
  font-family: '${pairing.headingFont}', serif;
}

body, p {
  font-family: '${pairing.textFont}', sans-serif;
}`}</code></pre>
              </div>
            </details>
          </div>
        </div>
      ))}
    </section>

    <!-- Additional Font Showcase -->
    <section class="space-y-6">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-slate-100">Bonus: Monospace Fonts for Code</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- JetBrains Mono -->
        <div class="p-6 border border-slate-200 dark:border-slate-700 rounded-xl bg-white dark:bg-slate-800">
          <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-slate-100">JetBrains Mono</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            Designed for developers with increased letter height and distinctive characters
          </p>
          <div class="bg-slate-900 p-4 rounded-lg overflow-x-auto">
            <pre style="font-family: 'JetBrains Mono', monospace;" class="text-sm text-green-400"><code>{`function fibonacci(n) {
  if (n <= 1) return n;
  return fibonacci(n-1) + fibonacci(n-2);
}

const result = fibonacci(10); // 55`}</code></pre>
          </div>
        </div>

        <!-- Fira Code -->
        <div class="p-6 border border-slate-200 dark:border-slate-700 rounded-xl bg-white dark:bg-slate-800">
          <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-slate-100">Fira Code</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            Popular for programming ligatures and excellent readability
          </p>
          <div class="bg-slate-900 p-4 rounded-lg overflow-x-auto">
            <pre style="font-family: 'Fira Code', monospace;" class="text-sm text-cyan-400"><code>{`const greeting = (name) => {
  return \`Hello, \${name}!\`;
};

console.log(greeting('World'));`}</code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography Tips -->
    <section class="mt-12 p-8 rounded-2xl bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 border border-indigo-200 dark:border-indigo-800">
      <h3 class="text-2xl font-bold text-indigo-900 dark:text-indigo-100 mb-4">Typography Best Practices</h3>
      <div class="grid md:grid-cols-2 gap-6 text-sm text-indigo-800 dark:text-indigo-200">
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Limit font families:</strong> Use 2-3 maximum per project
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Establish hierarchy:</strong> Use size, weight, and spacing
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Optimal line length:</strong> 50-75 characters for readability
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Line height:</strong> 1.5-1.6 for body text, tighter for headings
            </div>
          </div>
        </div>
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Contrast:</strong> Pair serif with sans-serif or vary weights
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Self-hosting:</strong> Use @fontsource for better performance
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Variable fonts:</strong> Consider them for flexible designs
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-indigo-600 dark:text-indigo-400 text-xl">✓</span>
            <div>
              <strong>Accessibility:</strong> Ensure sufficient color contrast
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

