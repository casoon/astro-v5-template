{
  "name": "@astro-v5/demo",
  "type": "module",
  "version": "1.4.2",
  "description": "Demo site showcasing Astro v5 template with example content",
  "private": true,
  "author": "casoon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/astro-v5-template"
  },
  "keywords": [
    "astro",
    "tailwindcss",
    "atlas",
    "svelte",
    "template",
    "starter",
    "typescript"
  ],
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "24.11.0",
    "pnpm": "9.15.4"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "node ../../scripts/validate-config.mjs . && astro check && astro build",
    "build:fast": "astro build",
    "preview": "astro preview",
    "clean": "rm -rf dist .astro node_modules/.cache",
    "setup": "node setup.js",
    "format": "pnpm format:biome && pnpm format:svelte && pnpm format:astro",
    "format:biome": "biome format --write .",
    "format:svelte": "prettier --write \"**/*.svelte\" --config .prettierrc.svelte.json",
    "format:astro": "prettier --write \"**/*.astro\" --config .prettierrc.astro.json",
    "check:format:svelte": "prettier --check \"**/*.svelte\" --config .prettierrc.svelte.json",
    "check:format:astro": "prettier --check \"**/*.astro\" --config .prettierrc.astro.json",
    "check:biome": "biome check --write .",
    "check": "pnpm check:biome && pnpm check:format:svelte && pnpm check:format:astro",
    "type-check": "astro check",
    "lighthouse": "pnpm dlx lighthouse http://localhost:4321 --output html --output-path ./lighthouse-report.html",
    "update-deps": "pnpm dlx npm-check-updates -u",
    "prepare": "husky",
    "postinstall": "echo \"\\nðŸš€ Dependencies installed! Run 'pnpm dev' to start development.\\n\""
  },
  "dependencies": {
    "@astro-v5/ui": "workspace:*",
    "@astro-v5/styles": "workspace:*",
    "@astro-v5/utils": "workspace:*",
    "@astro-v5/config": "workspace:*",
    "@astrojs/check": "catalog:",
    "@astrojs/mdx": "catalog:",
    "@astrojs/rss": "catalog:",
    "@astrojs/sitemap": "catalog:",
    "@astrojs/svelte": "catalog:",
    "@casoon/astro-speed-measure": "catalog:",
    "@casoon/astro-webvitals": "catalog:",
    "@casoon/atlas-styles": "catalog:",
    "@types/leaflet": "catalog:",
    "leaflet": "catalog:",
    "@fontsource/archivo": "catalog:",
    "@fontsource/crimson-text": "catalog:",
    "@fontsource/dm-sans": "catalog:",
    "@fontsource/fira-code": "catalog:",
    "@fontsource/inter": "catalog:",
    "@fontsource/jetbrains-mono": "catalog:",
    "@fontsource/lora": "catalog:",
    "@fontsource/manrope": "catalog:",
    "@fontsource/merriweather": "catalog:",
    "@fontsource/montserrat": "catalog:",
    "@fontsource/playfair-display": "catalog:",
    "@fontsource/poppins": "catalog:",
    "@fontsource/raleway": "catalog:",
    "@fontsource/source-serif-4": "catalog:",
    "@fontsource/space-grotesk": "catalog:",
    "@fontsource/work-sans": "catalog:",
    "@tailwindcss/forms": "catalog:",
    "@tailwindcss/typography": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "clsx": "catalog:",
    "lucide-svelte": "catalog:",
    "sharp": "catalog:",
    "svelte": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@types/node-fetch": "catalog:",
    "astro": "catalog:",
    "husky": "catalog:",
    "lighthouse": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "prettier-plugin-svelte": "catalog:",
    "wait-on": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.astro": [
      "prettier --write --config .prettierrc.astro.json"
    ],
    "*.svelte": [
      "prettier --write --config .prettierrc.svelte.json"
    ]
  }
}
