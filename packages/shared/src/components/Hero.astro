---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Get Started", 
  ctaLink = "#",
  secondaryCtaText,
  secondaryCtaLink 
} = Astro.props;
---

<section class="relative min-h-[80vh] flex items-center justify-center px-4 py-16 overflow-hidden">
  <!-- Transparent background -->
  <div class="absolute inset-0 bg-transparent">
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto text-center">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
      {title}
    </h1>
    
    {subtitle && (
      <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto mb-8">
        {subtitle}
      </p>
    )}
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href={ctaLink}
        aria-label={`${ctaText} - ${title}`}
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg hover:from-purple-700 hover:to-blue-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        {ctaText}
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>

      {secondaryCtaText && (
        <a
          href={secondaryCtaLink}
          aria-label={secondaryCtaText}
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-slate-900 dark:text-white bg-white/20 backdrop-blur-sm border border-white/30 rounded-lg transform hover:scale-105 transition-all duration-200 hover:bg-white/30"
        >
          {secondaryCtaText}
        </a>
      )}
    </div>
  </div>

</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>