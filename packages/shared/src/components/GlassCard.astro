---
export interface Props {
  title: string;
  description?: string;
  variant?: 'default' | 'dark' | 'strong' | 'blue' | 'purple' | 'pink';
  size?: 'sm' | 'md' | 'lg';
}

const {
  title,
  description,
  variant = 'default',
  size = 'md'
} = Astro.props;

const sizeClass = size === 'sm' ? 'p-4'
  : size === 'lg' ? 'p-8'
  : 'p-6';

// Native Tailwind glass effects with different intensities and colors
const glassClass = variant === 'default'
  ? 'bg-gradient-to-br from-cyan-400/25 to-blue-400/25 backdrop-blur-md border border-cyan-300/40'
  : variant === 'dark'
  ? 'bg-gradient-to-br from-slate-700/60 to-slate-900/60 backdrop-blur-lg border border-slate-500/40 text-white'
  : variant === 'strong'
  ? 'bg-gradient-to-br from-purple-400/30 to-pink-400/30 backdrop-blur-xl border-2 border-purple-300/50'
  : variant === 'blue'
  ? 'bg-blue-500/20 border-blue-400/30 backdrop-blur-md border'
  : variant === 'purple'
  ? 'bg-purple-500/20 border-purple-400/30 backdrop-blur-md border'
  : 'bg-pink-500/20 border-pink-400/30 backdrop-blur-md border';

const textClass = variant === 'dark' ? 'text-gray-200' : 'text-slate-700 dark:text-slate-200';
const titleClass = variant === 'dark' ? 'text-white' : 'text-slate-900 dark:text-white';
---

<div class={`${glassClass} ${sizeClass} rounded-xl transform transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:bg-white/10`}>
  <h3 class={`text-xl font-semibold mb-2 ${titleClass}`}>{title}</h3>
  {description && (
    <p class={textClass}>{description}</p>
  )}
  <slot />
</div>
