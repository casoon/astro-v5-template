---
import BaseLayout from '../layouts/BaseLayout.astro';
import { env } from '../env';
---

<BaseLayout title={env.PUBLIC_SITE_NAME} description="Welcome to your new Astro site">
  <main id="main-content" class="min-h-screen flex items-center justify-center p-8">
    <div class="max-w-2xl text-center space-y-6">
      <h1 class="text-gradient text-5xl font-bold">Welcome to Astro</h1>

      <p class="text-xl text-neutral-400">
        Your blank canvas is ready. Start building something amazing.
      </p>

      <div class="flex gap-4 justify-center pt-8">
        <a
          href="https://docs.astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-accent-primary text-white rounded-lg hover:opacity-90 transition-opacity"
        >
          Documentation
        </a>
        <a
          href="https://github.com/casoon/astro-v5-template"
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 border border-border rounded-lg hover:bg-neutral-800 transition-colors"
        >
          GitHub
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
