---
export interface Props {
  title: string;
  description: string;
  variant?: 'default' | 'dark' | 'blue' | 'purple' | 'pink';
}

const { title, description, variant = 'default' } = Astro.props;

const variantStyles = {
  default: 'bg-white/10 border-white/20',
  dark: 'bg-black/20 border-black/30',
  blue: 'bg-blue-500/20 border-blue-400/30',
  purple: 'bg-purple-500/20 border-purple-400/30',
  pink: 'bg-pink-500/20 border-pink-400/30',
};
---

<div
  class={`p-6 rounded-xl backdrop-blur-md border transition-all duration-300 hover:scale-105 ${variantStyles[variant]}`}
  style="backdrop-filter: blur(12px);"
>
  <h3 class="text-xl font-bold mb-2 text-slate-900 dark:text-white">
    {title}
  </h3>
  <p class="text-slate-700 dark:text-slate-300">
    {description}
  </p>
  <slot />
</div>
