---
import SvelteDemo from '@/components/SvelteDemo.svelte';
import BaseLayout from '@/layouts/BaseLayout.astro';
import GlassCard from '@astro-v5/shared/components/GlassCard.astro';
import Hero from '@astro-v5/shared/components/Hero.astro';
import Card from '@astro-v5/shared/components/Card.astro';
---
<BaseLayout>
  <!-- Hero Section -->
  <Hero
    title="Build Amazing Sites with Astro + Atlas"
    subtitle="A modern template combining Astro 5, Tailwind CSS v4, and Atlas Design System for beautiful, performant websites."
    ctaText="Get Started"
    ctaLink="#components"
    secondaryCtaText="View on GitHub"
    secondaryCtaLink="https://github.com/yourusername/astro-v5-template"
  />

  <div class="space-y-16" id="components">
    <!-- Glowing Title -->
    <h1 class="text-6xl font-bold text-center">
      <span class="bg-gradient-to-r from-pink-400 via-pink-500 to-pink-600 bg-clip-text text-transparent animate-pulse">
        Astro V5
      </span>
      <span class="text-slate-800 dark:text-slate-200"> + </span>
      <span class="bg-gradient-to-r from-cyan-400 to-cyan-500 bg-clip-text text-transparent">
        Tailwind
      </span>
      <span class="text-slate-800 dark:text-slate-200"> + </span>
      <span class="bg-gradient-to-r from-pink-400 to-pink-600 bg-clip-text text-transparent">
        Svelte
      </span>
    </h1>

    <!-- Description -->
    <p class="text-xl text-slate-600 dark:text-slate-300 text-center leading-relaxed max-w-2xl mx-auto">
      A modern web template combining the latest technologies with
      <span class="text-cyan-600 dark:text-cyan-400 font-semibold">beautiful UI components</span>
      <br class="hidden sm:block" />
      and developer-friendly tools
    </p>

    <!-- Atlas Glass Cards -->
    <div class="relative mt-12 p-8 rounded-3xl bg-gradient-to-br from-purple-500 via-pink-500 to-cyan-500">
      <div class="grid md:grid-cols-3 gap-6">
        <GlassCard title="Glass Effect" description="Beautiful Atlas glassmorphism" />
        <GlassCard title="Dark Glass" description="Dark variant for enhanced contrast" variant="dark" />
        <GlassCard title="Strong Glass" description="Maximum glass effect intensity" variant="strong" />
      </div>
    </div>

    <!-- Beautiful Gradient Examples -->
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="bg-gradient-to-br from-cyan-400 to-blue-600 p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white drop-shadow-lg">Ocean Gradient</h3>
        <p class="text-white/90 mt-2">Beautiful ocean colors with smooth transitions</p>
      </div>
      <div class="bg-gradient-to-br from-orange-400 to-pink-600 p-6 rounded-lg">
        <h3 class="text-2xl font-bold text-white drop-shadow-lg">Sunset Gradient</h3>
        <p class="text-white/90 mt-2">Warm sunset colors for vibrant designs</p>
      </div>
    </div>

    <!-- Atlas UI Components Showcase -->
    <div class="space-y-8 mt-12">
      <!-- Button Collection -->
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Interactive Buttons</h3>
        <div class="flex flex-wrap justify-center gap-4">
          <button class="cs-button-primary hover:scale-105 transition-all duration-200">
            Primary Action
          </button>
          <button class="cs-button-secondary hover:scale-105 transition-all duration-200">
            Secondary
          </button>
          <button class="cs-glass px-6 py-3 rounded-lg hover:scale-105 transition-all duration-200">
            Atlas Glass
          </button>
        </div>
      </div>

      <!-- Animated Elements -->
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Animations & Effects</h3>
        <div class="flex justify-center items-center gap-8 flex-wrap">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full" style="animation: var(--animate-float)"></div>
          <div class="w-16 h-16 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full" style="animation: var(--animate-endless)"></div>
          <div class="px-6 py-3 bg-gradient-to-r from-orange-500 to-red-500 rounded-lg text-white font-semibold" style="background-size: 200% 100%; animation: var(--animate-shine)">
            Shine Effect
          </div>
        </div>
      </div>

      <!-- Atlas Orbs & Floating Elements -->
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Floating Orbs & Elements</h3>
        <div class="relative h-32 flex justify-center items-center overflow-hidden">
          <!-- Animated Orbs -->
          <div class="absolute w-20 h-20 bg-gradient-to-br from-pink-400 to-purple-600 rounded-full opacity-60 blur-sm" style="animation: var(--animate-float); animation-duration: 3s;"></div>
          <div class="absolute w-16 h-16 bg-gradient-to-br from-cyan-400 to-blue-600 rounded-full opacity-50 blur-sm" style="animation: var(--animate-float); animation-duration: 4s; animation-delay: 1s; transform: translateX(80px);"></div>
          <div class="absolute w-12 h-12 bg-gradient-to-br from-orange-400 to-red-600 rounded-full opacity-70 blur-sm" style="animation: var(--animate-float); animation-duration: 5s; animation-delay: 2s; transform: translateX(-60px);"></div>
          <div class="relative z-10 text-lg font-semibold text-slate-700 dark:text-slate-200">Interactive Background Elements</div>
        </div>
      </div>

      <!-- Atlas Typography Effects -->
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Typography Effects</h3>
        <div class="space-y-6">
          <h2 class="text-5xl font-bold bg-gradient-to-r from-purple-500 via-pink-500 to-orange-500 bg-clip-text text-transparent">Rainbow Gradient</h2>
          <h2 class="text-4xl font-bold bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent">Ocean Gradient</h2>
          <h2 class="text-4xl font-bold text-slate-800 dark:text-slate-100" style="text-shadow: 3px 3px 6px rgba(0,0,0,0.5), 0 0 20px rgba(59,130,246,0.3);">Glow Shadow</h2>
          <h2 class="text-4xl font-bold bg-gradient-to-r from-pink-400 via-red-500 to-yellow-500 bg-clip-text text-transparent" style="background-size: 300% 100%; animation: var(--animate-shine);">Animated Shine</h2>
        </div>
      </div>
    </div>

    <!-- Atlas Feature Showcase -->
    <div class="relative p-8 rounded-3xl bg-gradient-to-br from-violet-600 via-fuchsia-600 to-pink-600 mt-8">
      <div class="grid md:grid-cols-3 gap-6">
        <!-- Feature Card 1 - Performance First -->
        <div class="group relative p-6 rounded-xl backdrop-blur-md cs-fade-in hover:scale-105 transition-all duration-300 cursor-pointer"
             style="background: var(--cs-glass-bg-medium); border: 1px solid var(--cs-glass-border-medium);">
          <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-blue-400/20 to-cyan-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative">
            <div class="text-5xl mb-4 cs-float cs-anim-infinite">üöÄ</div>
            <h3 class="text-xl font-bold text-white mb-2">Performance First</h3>
            <p class="text-white/90 text-sm">Optimized CSS animations and efficient rendering with hardware acceleration</p>
          </div>
        </div>

        <!-- Feature Card 2 - Design System -->
        <div class="group relative p-6 rounded-xl backdrop-blur-md cs-fade-in cs-delay-100 hover:scale-105 transition-all duration-300 cursor-pointer"
             style="background: var(--cs-glass-bg-medium); border: 1px solid var(--cs-glass-border-medium);">
          <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-purple-400/20 to-pink-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative">
            <div class="text-5xl mb-4 cs-pulse cs-anim-infinite">üé®</div>
            <h3 class="text-xl font-bold text-white mb-2">Design System</h3>
            <p class="text-white/90 text-sm">Consistent components with Tailwind v4 integration and Atlas utilities</p>
          </div>
        </div>

        <!-- Feature Card 3 - Interactive Effects -->
        <div class="group relative p-6 rounded-xl backdrop-blur-md cs-fade-in cs-delay-200 hover:scale-105 transition-all duration-300 cursor-pointer"
             style="background: var(--cs-glass-bg-medium); border: 1px solid var(--cs-glass-border-medium);">
          <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-orange-400/20 to-red-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative">
            <div class="text-5xl mb-4 cs-wiggle cs-anim-infinite">‚ú®</div>
            <h3 class="text-xl font-bold text-white mb-2">Interactive Effects</h3>
            <p class="text-white/90 text-sm">Smooth animations and hover transitions powered by Atlas Styles</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Card Component Showcase -->
    <section class="mt-16">
      <h2 class="text-3xl font-bold text-center mb-8">Card Component Variants</h2>

      <!-- Colorful background for cards with glass effects -->
      <div class="relative p-8 rounded-3xl bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <Card
            title="Default Card"
            description="A clean card with Tailwind styling and subtle shadows."
            tag="Tailwind"
          />
          <Card
            title="Glass Card"
            description="Beautiful glassmorphism effect using Atlas utilities."
            variant="glass"
            tag="Atlas"
          />
          <Card
            title="Gradient Card"
            description="Eye-catching gradient background with hover effects."
            variant="gradient"
            tag="Featured"
          />
          <Card
            title="Outline Card"
            description="Minimal design with focus on content and clean borders."
            variant="outline"
            tag="Minimal"
          />
        </div>
      </div>
    </section>

    <!-- Atlas Form Elements -->
    <section class="mt-16">
      <h2 class="text-3xl font-bold text-center mb-8">Atlas Form System</h2>

      <!-- Comparison: Regular vs Atlas Forms with gradient background -->
      <div class="relative p-8 rounded-3xl bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-500">
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          <!-- Regular Tailwind Form with glass effect -->
          <div class="rounded-xl p-6 backdrop-blur-md" style="background: var(--cs-glass-bg-medium); border: 1px solid var(--cs-glass-border-medium);">
            <h3 class="text-lg font-bold mb-4 text-white">üìù Regular Tailwind Forms</h3>
          <form class="space-y-4">
            <div>
              <label class="block text-sm font-medium mb-2">Standard Input</label>
              <input
                type="text"
                placeholder="Basic input field"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Standard Button</label>
              <button class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                Submit
              </button>
            </div>
          </form>
        </div>

          <!-- Atlas Modern Form with glass effect -->
          <div class="rounded-xl p-6 backdrop-blur-md" style="background: var(--cs-glass-bg-medium); border: 1px solid var(--cs-glass-border-medium);">
            <h3 class="text-lg font-bold mb-4 text-white">‚ú® Atlas Modern Forms</h3>
          <form class="cs-form-modern">
            <div class="cs-form-group">
              <label class="cs-label-modern">Modern Input</label>
              <input type="text" class="cs-input-modern" placeholder="Atlas styled input with better focus states">
            </div>
            <button class="cs-button-primary-modern">
              Atlas Submit
            </button>
          </form>
          </div>
        </div>
      </div>

      <!-- Atlas Form Features Showcase -->
      <div class="mt-12 max-w-4xl mx-auto">
        <h3 class="text-xl font-bold text-center mb-8">Atlas Form Features</h3>
        <form class="cs-form-modern">
          <!-- Input with Validation States -->
          <div class="cs-form-row">
            <div class="cs-form-col">
              <label class="cs-label-modern">Email with Success State</label>
              <input type="email" class="cs-input-modern cs-input-success" placeholder="success@example.com" value="user@example.com">
              <!-- Success state example -->
              <small class="text-green-600 text-sm flex items-center gap-1 mt-1">
                <span>‚úì</span> Email format is valid
              </small>
            </div>
            <div class="cs-form-col">
              <label class="cs-label-modern">Input with Error State</label>
              <input type="text" class="cs-input-modern cs-input-error" placeholder="This field has an error">
              <!-- Error state example -->
              <small class="text-red-600 text-sm flex items-center gap-1 mt-1">
                <span>‚ö†</span> This field is required
              </small>
            </div>
          </div>

          <!-- Input Groups with Addons -->
          <div class="cs-form-group">
            <label class="cs-label-modern">Input with Addon</label>
            <div class="cs-input-group">
              <div class="cs-input-addon cs-input-addon-left">$</div>
              <input type="number" class="cs-input-modern cs-input-with-addon-left" placeholder="0.00">
            </div>
          </div>

          <div class="cs-form-group">
            <label class="cs-label-modern">URL Input</label>
            <div class="cs-input-group">
              <input type="text" class="cs-input-modern cs-input-with-addon-right" placeholder="your-site">
              <div class="cs-input-addon cs-input-addon-right">.com</div>
            </div>
          </div>
        </form>
      </div>
    </section>

    <!-- Interactive Demo Section -->
    <section class="mt-16 text-center">
      <h2 class="text-3xl font-bold mb-8">Interactive Components</h2>
      <div class="flex justify-center">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-pink-600 rounded-2xl blur-xl opacity-30 animate-pulse"></div>
          <div class="relative">
            <SvelteDemo client:load />
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
